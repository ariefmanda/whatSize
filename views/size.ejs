<%- include('./partials/header')%>
<div class="ui top attached tabular menu">
<a href="/brand" class="item">Brand</a>
<a href="/size" class="active item">Size</a>
</div>
<div class="ui bottom attached active tab segment">
    <table class="ui celled compact table">
          <thead>
              <tr>
                  <th>No</th>
                  <th>Size Number</th>
                  <th>Action</th>
              </tr>
          </thead>
          <tbody>
              <tr>
                  <%data.forEach((data,no) => {%>
                      <td>
                          <%=no+1%>
                      </td>
                      <td>
                          <%=data.sizeNumber%>
                      </td>
                      <td>
                          <a href="/size/edit/<%=data.id%>">edit</a> |
                          <a href="/size/delete/<%=data.id%>">delete</a>
                      </td>
              </tr>
              <%})%>
          </tbody>
    </table>
    </br>
  </br>
    <form class="ui form" action="" method="post">
      <input type="text" placeholder="Brand name" name="sizeNumber" value="<%=(dataEdit)? dataEdit.sizeNumber: ' '%>">
      <input class="ui primary button" type="submit" value="<%=(dataEdit)? 'Edit': 'Add'%>">
    </form>
  </div>
  <%- include('./partials/footer')%>
