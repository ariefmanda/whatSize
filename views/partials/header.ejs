<body>
  <div class="ui large menu">
    <div class="item">
      <img style="margin-right:10px;" src="https://hacktiv8.com/img/fox--md5--a9e377ae39495073d0e66db163fc8d9b.png"> WHAT
      <br>SIZE
    </div>
    <a class="link item" href="/">Home</a>
    <% if (login) { %>
      <a class="link item" href="/transactions">Transactions</a>
    <% } %>
    <div class="right menu">
      <% if (!login) { %>
      <a href="/users/add" class="ui item">
        Register
      </a>
      <% } %>
        <% if (login) { %>
          <a href="/auth/logout" class="ui item">
          Logout
        <% }else{ %>
          <a href="/auth/login" class="ui item">
          Login
        <% } %>
    </a>
    </div>
  </div>
  <% if (typeof message !== 'undefined') { %>
    <div class="ui error message">
      <%= message %>
    </div>
    <% } %>
